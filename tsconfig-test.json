{
  "compilerOptions": {
    "locale": "en-uk",
    "target": "ES6",
    "module": "CommonJS",
    "newLine": "lf",
    "preserveConstEnums": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "types": [
      "chai",
      "mocha",
      "node",
      "big-integer"
    ],
    "outDir": "js/test"
  },
  "include": [
    "ts/test/**/*"
  ]
}
