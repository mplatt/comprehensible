{
  "compilerOptions": {
    "locale": "en-uk",
    "target": "ES6",
    "module": "CommonJS",
    "newLine": "lf",
    "preserveConstEnums": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "types": [
      "node",
      "big-integer"
    ],
    "outDir": "js/main"
  },
  "include": [
    "ts/main/**/*"
  ]
}
